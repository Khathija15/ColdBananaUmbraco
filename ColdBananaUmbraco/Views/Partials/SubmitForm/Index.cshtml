@model ColdBananaUmbraco.Models.Contact
@using ColdBananaUmbraco.Controllers;
@{
    Layout = "Master.cshtml";
}

@if (TempData["ContactSuccess"] != null && (bool)TempData["ContactSuccess"])
{
    <p>Your message was sent successfully</p>
}
@using (Html.BeginUmbracoForm<ContactSurfaceController>(nameof(ContactSurfaceController.SubmitForm)))
{
    <div class="input-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
    </div>
    <div class="input-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" />
    </div>
    <div>
        <label asp-for="EmailAddress"></label>
        <input asp-for="EmailAddress" />
    </div>
    <div class="input-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" />
    </div>
    <div>
        <label asp-for="Message"></label>
        <textarea asp-for="Message"></textarea>
    </div>
    <br />
    <input type="submit" name="Submit" value="Submit" />
}