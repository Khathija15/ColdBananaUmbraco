@model ColdBananaUmbraco.Models.Contact

@using (Html.BeginUmbracoForm("SubmitForm", "ContactSurface", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.ValidationSummary()
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.LabelFor(m => Model.FirstName)
        </div>
        <div class="col-md-12">
            @Html.TextBoxFor(m => Model.FirstName)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.LabelFor(m => Model.LastName)
        </div>
        <div class="col-md-12">
            @Html.TextBoxFor(m => Model.LastName)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.LabelFor(m => Model.EmailAddress)
        </div>
        <div class="col-md-12">
            @Html.TextBoxFor(m => Model.EmailAddress)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.LabelFor(m => Model.PhoneNumber)
        </div>
        <div class="col-md-12">
            @Html.TextBoxFor(m => Model.PhoneNumber)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.LabelFor(m => Model.Message)
        </div>
        <div class="col-md-12">
            @Html.TextAreaFor(m => Model.Message)
        </div>
    </div>
    <input type="submit" name="Submit" value="Submit" />
}
